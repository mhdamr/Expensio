<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.fundcache.HomeFragment"
        android:label="@string/home_fragment_label">

        <action
            android:id="@+id/action_homeFragment_to_walletsFragment"
            app:destination="@id/walletsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.fundcache.SettingsFragment"
        android:label="Settings">
    </fragment>

    <fragment
        android:id="@+id/walletsFragment"
        android:name="com.example.fundcache.WalletsFragment"
        android:label="Wallets">
    </fragment>

    <fragment
        android:id="@+id/addWalletsFragment"
        android:name="com.example.fundcache.AddWalletsFragment"
        android:label="Add Wallets">
    </fragment>

</navigation>
