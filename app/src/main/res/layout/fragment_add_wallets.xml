<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="?attr/actionBarSize"
    android:background="@color/windowBackground"
    android:theme="@style/Theme.FundCache">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/wallet_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="Wallet" />

            <EditText
                android:id="@+id/wallet_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/wallet_name_hint"
                android:paddingStart="15dp"
                android:inputType="text"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/currency_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="Currency" />

            <Spinner
                android:id="@+id/currency_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="7dp"
                android:background="@drawable/rounded_edit_text"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/amount_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="Amount" />

            <EditText
                android:id="@+id/amount_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/amount_hint"
                android:paddingStart="15dp"
                android:background="@drawable/rounded_edit_text"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnSelectColor"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA500"
                android:text="Select a Color" />


            <Button
                android:id="@+id/create_wallet_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_button"
                android:text="Create Wallet" />

        </LinearLayout>

    </ScrollView>

</layout>
