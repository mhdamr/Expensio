<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FundCache" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/windowBackground</item>

        <!-- Action bar style. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="titleTextColor">@color/textPrimary</item>

        <!-- Bottom app bar style. -->
        <item name="bottomAppBarStyle">@style/BottomAppBarStyle</item>

    </style>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/windowBackground</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="elevation">0dp</item>
        <item name="contentInsetStart">20dp</item>
        <item name="contentInsetEnd">20dp</item>
        <item name="windowActionBarOverlay">@null</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" >
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/textBoxBackground</item>
    </style>

</resources>